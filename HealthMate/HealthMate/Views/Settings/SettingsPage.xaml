<?xml version="1.0" encoding="utf-8" ?>
<templates:BasePage x:Class="HealthMate.Views.Settings.SettingsPage"
                    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:constants="clr-namespace:HealthMate.Constants"
                    xmlns:controls="clr-namespace:HealthMate.Controls"
                    xmlns:templates="clr-namespace:HealthMate.Templates"
                    xmlns:vm="clr-namespace:HealthMate.ViewModels.Settings"
                    x:DataType="vm:SettingsPageViewModel"
                    x:TypeArguments="vm:SettingsPageViewModel"
                    Shell.NavBarIsVisible="False">
    <ScrollView>
        <VerticalStackLayout Padding="0,0,0,20">
            <VerticalStackLayout.Resources>
                <Style TargetType="Border">
                    <Setter Property="BackgroundColor" Value="White" />
                    <Setter Property="StrokeShape" Value="RoundRectangle 10" />
                    <Setter Property="Margin" Value="16,40,16,0" />
                </Style>
            </VerticalStackLayout.Resources>
            <Image HeightRequest="200"
                   Source="{Binding Avatar}"
                   WidthRequest="200" />

            <Label Margin="0,-20,0,0"
                   FontFamily="{StaticResource Medium}"
                   FontSize="25"
                   HorizontalOptions="Center"
                   Text="{Binding Username}"
                   TextColor="{StaticResource RegBlack}" />

            <Border Margin="16,0">
                <VerticalStackLayout>
                    <Label Margin="10,5,0,0"
                           FontFamily="{StaticResource Medium}"
                           FontSize="18"
                           Text="User Info"
                           TextColor="{StaticResource Pink}" />

                    <Grid ColumnDefinitions="30,*">
                        <Label Margin="10,0,0,0"
                               FontFamily="{StaticResource FASolid}"
                               Text="{Static constants:FontAwesomeIcons.Signature}"
                               TextColor="{StaticResource RegBlack}"
                               VerticalOptions="Center" />

                        <Label Grid.Column="1"
                               Margin="10"
                               FontFamily="{StaticResource Regular}"
                               FontSize="16"
                               Text="{Binding Username}" />
                    </Grid>

                    <BoxView Margin="40,0,0,0"
                             BackgroundColor="LightGray"
                             HeightRequest="0.5" />


                    <Grid ColumnDefinitions="30,*">
                        <Label Margin="10,0,0,0"
                               FontFamily="{StaticResource FASolid}"
                               Text="{Static constants:FontAwesomeIcons.MarsAndVenus}"
                               TextColor="{StaticResource RegBlack}"
                               VerticalOptions="Center" />

                        <Label Grid.Column="1"
                               Margin="10"
                               FontFamily="{StaticResource Regular}"
                               FontSize="16"
                               Text="{Binding SelectedGender}" />
                    </Grid>


                    <BoxView Margin="40,0,0,0"
                             BackgroundColor="LightGray"
                             HeightRequest="0.5" />

                    <Grid ColumnDefinitions="30,*">
                        <Label Margin="10,0,0,0"
                               FontFamily="{StaticResource FASolid}"
                               Text="{Static constants:FontAwesomeIcons.CakeCandles}"
                               TextColor="{StaticResource RegBlack}"
                               VerticalOptions="Center" />

                        <Label Grid.Column="1"
                               Margin="10"
                               FontFamily="{StaticResource Regular}"
                               FontSize="16"
                               Text="{Binding BirthDate, StringFormat='{0:MMMM d, yyyy}'}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <Border>
                <VerticalStackLayout>
                    <Grid Padding="10,5"
                          RowDefinitions="*,*"
                          RowSpacing="-5">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenHealthMateWebsiteCommand}" />
                        </Grid.GestureRecognizers>
                        <Label FontFamily="{StaticResource Medium}"
                               FontSize="18"
                               Text="Help"
                               TextColor="{StaticResource Pink}" />

                        <Label Grid.Row="1"
                               FontFamily="{StaticResource Medium}"
                               FontSize="12"
                               Text="Contact us, frequently asked questions"
                               TextColor="{StaticResource RegBlack}" />

                        <Label Grid.RowSpan="2"
                               FontFamily="{StaticResource FASolid}"
                               FontSize="14"
                               HorizontalOptions="End"
                               Text="{Static constants:FontAwesomeIcons.ChevronRight}"
                               TextColor="{StaticResource RegBlack}"
                               VerticalOptions="Center" />
                    </Grid>

                    <BoxView BackgroundColor="LightGray"
                             HeightRequest="0.5" />

                    <Grid Padding="10,5"
                          RowDefinitions="*,*"
                          RowSpacing="-5">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenHealthMateWebsiteCommand}" />
                        </Grid.GestureRecognizers>
                        <Label FontFamily="{StaticResource Medium}"
                               FontSize="18"
                               Text="About us"
                               TextColor="{StaticResource Pink}" />

                        <Label Grid.Row="1"
                               FontFamily="{StaticResource Medium}"
                               FontSize="12"
                               Text="Learn more about the team behind HealthMate"
                               TextColor="{StaticResource RegBlack}" />

                        <Label Grid.RowSpan="2"
                               FontFamily="{StaticResource FASolid}"
                               FontSize="14"
                               HorizontalOptions="End"
                               Text="{Static constants:FontAwesomeIcons.ChevronRight}"
                               TextColor="{StaticResource RegBlack}"
                               VerticalOptions="Center" />

                    </Grid>
                </VerticalStackLayout>
            </Border>

            <Border>
                <VerticalStackLayout>
                    <Grid Padding="10,5"
                          RowDefinitions="*,*"
                          RowSpacing="-5">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding DeleteAccountCommand}" />
                        </Grid.GestureRecognizers>
                        <Label FontFamily="{StaticResource Medium}"
                               FontSize="18"
                               Text="Delete account"
                               TextColor="{StaticResource Red}" />

                        <Label Grid.Row="1"
                               FontFamily="{StaticResource Medium}"
                               FontSize="12"
                               Text="This action cannot be undone."
                               TextColor="{StaticResource RegBlack}" />

                        <Label Grid.RowSpan="2"
                               FontFamily="{StaticResource FASolid}"
                               FontSize="14"
                               HorizontalOptions="End"
                               Text="{Static constants:FontAwesomeIcons.ChevronRight}"
                               TextColor="{StaticResource RegBlack}"
                               VerticalOptions="Center" />

                    </Grid>

                    <BoxView BackgroundColor="LightGray"
                             HeightRequest="0.5" />

                    <Grid Padding="10,5"
                          RowSpacing="-5">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SignOutCommand}" />
                        </Grid.GestureRecognizers>
                        <Label FontFamily="{StaticResource Medium}"
                               FontSize="18"
                               Text="Sign out"
                               TextColor="{StaticResource Red}" />

                        <Label FontFamily="{StaticResource FASolid}"
                               FontSize="14"
                               HorizontalOptions="End"
                               Text="{Static constants:FontAwesomeIcons.ChevronRight}"
                               TextColor="{StaticResource RegBlack}"
                               VerticalOptions="Center" />

                    </Grid>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</templates:BasePage>

