<?xml version="1.0" encoding="utf-8" ?>
<templates:BasePage x:Class="HealthMate.Views.HomePage"
                    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:constants="clr-namespace:HealthMate.Constants"
                    xmlns:models="clr-namespace:HealthMate.Models"
                    xmlns:sf="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView"
                    xmlns:templates="clr-namespace:HealthMate.Templates"
                    xmlns:vm="clr-namespace:HealthMate.ViewModels"
                    x:DataType="vm:HomePageViewModel"
                    x:TypeArguments="vm:HomePageViewModel">
    <sf:SfTabView x:Name="Tab"
                  IndicatorBackground="{StaticResource Pink}"
                  IndicatorPlacement="Top"
                  ItemsSource="{Binding TabItems}"
                  SelectedIndex="{Binding SelectedIndex}"
                  TabBarPlacement="Bottom"
                  TabWidthMode="SizeToContent">
        <sf:SfTabView.Resources>
            <Style TargetType="sf:SfTabItem">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup>
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{StaticResource RegBlack}" />
                                    <Setter Property="ImageSource">
                                        <Setter.Value>
                                            <FontImageSource FontFamily="{StaticResource FASolid}"
                                                             Glyph="{Static constants:FontAwesomeIcons.CalendarClock}"
                                                             Size="10"
                                                             Color="{StaticResource RegBlack}" />
                                        </Setter.Value>
                                    </Setter>
                                </VisualState.Setters>
                            </VisualState>

                            <VisualState x:Name="Selected">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{StaticResource Pink}" />
                                    <Setter Property="ImageSource">
                                        <Setter.Value>
                                            <FontImageSource FontFamily="{StaticResource FASolid}"
                                                             Glyph="{Static constants:FontAwesomeIcons.CalendarClock}"
                                                             Size="10"
                                                             Color="{StaticResource Pink}" />
                                        </Setter.Value>
                                    </Setter>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
        </sf:SfTabView.Resources>

        <sf:SfTabView.HeaderItemTemplate>
            <DataTemplate x:DataType="models:TabItem">
                <VerticalStackLayout VerticalOptions="End">
                    <Image>
                        <Image.Source>
                            <FontImageSource FontFamily="{StaticResource FASolid}"
                                             Glyph="{Binding Icon}"
                                             Size="20"
                                             Color="{Binding Color}" />
                        </Image.Source>
                    </Image>
                    <Label FontFamily="{StaticResource Regular}"
                           FontSize="13"
                           HorizontalTextAlignment="Center"
                           Text="{Binding Title}"
                           TextColor="{Binding Color}"
                           VerticalOptions="Center" />
                </VerticalStackLayout>
            </DataTemplate>
        </sf:SfTabView.HeaderItemTemplate>

        <sf:SfTabView.ContentItemTemplate>
            <DataTemplate>
                <Label Text="content" />
            </DataTemplate>
        </sf:SfTabView.ContentItemTemplate>

